<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %>
      <br>
      <%= task.description %>
      <br>
      <%= task.status %>
      <br>
      <%= task.categories.map(&:name) %>
    </li>
  <% end %>
</ul>

<% #if can? :create, Task %>
  <%= link_to "New Task", new_task_path %>
<% #end %>